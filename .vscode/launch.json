    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Train Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--config-file", "datacenter_sim",
                "--type-env", "sim-edge",
                "--use-callback", "True",
                "--checkpoint-freq", "100"
            ]
        },
        {
            "name": "Python Debugger: Simluation Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--config-file", "datacenter_test",
                "--type-env", "sim-edge",
                "--num_containers", "6",
                "--episode-length", "5000",
                "--ml-scheduler", "False"
            ]
        },
        {
            "name": "Python Debugger: GKE Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--config-file", "datacenter_test",
                "--type-env", "kube-edge",
                "--num_containers", "6",
                "--episode-length", "60",
                "--ml-scheduler", "True"
            ]
        }
    ]
}